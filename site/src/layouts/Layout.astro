---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Aggregated feed of Microsoft Tech Community blogs" } = Astro.props;
const siteTitle = "Microsoft Blog Reader";
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
const baseUrl = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
const feedUrl = `${baseUrl}feed.xml`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="alternate" type="application/rss+xml" title={siteTitle} href={feedUrl} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{fullTitle}</title>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900">
    <header class="bg-white border-b border-gray-200">
      <div class="max-w-4xl mx-auto px-4 py-6">
        <a href={import.meta.env.BASE_URL} class="text-2xl font-bold text-blue-600 hover:text-blue-700">
          {siteTitle}
        </a>
        <p class="text-gray-600 mt-1">{description}</p>
      </div>
    </header>
    <main class="max-w-4xl mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="bg-white border-t border-gray-200 mt-12">
      <div class="max-w-4xl mx-auto px-4 py-6 text-center text-gray-500 text-sm">
        <p>
          Data sourced from
          <a
            href="https://techcommunity.microsoft.com/"
            class="text-blue-600 hover:underline"
            target="_blank"
            rel="noopener noreferrer"
          >
            Microsoft Tech Community
          </a>
        </p>
        <p class="mt-2">
          <a href={feedUrl} class="text-blue-600 hover:underline">RSS Feed</a>
        </p>
      </div>
    </footer>
  </body>
</html>
