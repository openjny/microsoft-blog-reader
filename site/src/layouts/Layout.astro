---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Aggregated feed of Microsoft Tech Community blogs" } = Astro.props;
const siteTitle = "Microsoft Blog Reader";
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
const baseUrl = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
const feedUrl = `${baseUrl}feed.xml`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="alternate" type="application/rss+xml" title={siteTitle} href={feedUrl} />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
    <title>{fullTitle}</title>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900">
    <header class="bg-white border-b border-gray-200 sticky top-0 z-50 shadow-sm">
      <div class="max-w-4xl mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <div>
            <a href={import.meta.env.BASE_URL} class="text-xl font-bold text-blue-600 hover:text-blue-700">
              {siteTitle}
            </a>
            <p class="text-gray-500 text-sm mt-0.5">{description}</p>
          </div>
          <nav class="hidden sm:flex items-center gap-4">
            <a href={feedUrl} class="inline-flex items-center gap-1 text-sm text-gray-600 hover:text-blue-600 transition-colors">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M6.18 15.64a2.18 2.18 0 1 1 0 4.36 2.18 2.18 0 0 1 0-4.36zM4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44zm0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93v-2.83z"/>
              </svg>
              RSS
            </a>
            <a href="https://github.com/openjny/microsoft-blog-reader" class="inline-flex items-center gap-1 text-sm text-gray-600 hover:text-blue-600 transition-colors" target="_blank" rel="noopener noreferrer">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub
            </a>
          </nav>
        </div>
      </div>
    </header>
    <main class="max-w-4xl mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="bg-white border-t border-gray-200 mt-12">
      <div class="max-w-4xl mx-auto px-4 py-6 text-center text-gray-500 text-sm">
        <p>
          Data sourced from
          <a
            href="https://techcommunity.microsoft.com/"
            class="text-blue-600 hover:underline"
            target="_blank"
            rel="noopener noreferrer"
          >
            Microsoft Tech Community
          </a>
        </p>
        <!-- Mobile footer links (hidden on sm+) -->
        <p class="mt-2 sm:hidden">
          <a href={feedUrl} class="text-blue-600 hover:underline">RSS Feed</a>
          <span class="mx-2">â€¢</span>
          <a href="https://github.com/openjny/microsoft-blog-reader" class="text-blue-600 hover:underline" target="_blank" rel="noopener noreferrer">GitHub</a>
        </p>
      </div>
    </footer>
  </body>
</html>
