---
import Layout from "../layouts/Layout.astro";
import ArticleCard from "../components/ArticleCard.astro";
import { getAllArticles, getTotalCount, stripHtml, formatDate, formatCategory } from "../lib/db";
import { getBlogUrl } from "../lib/blogs";

const articles = getAllArticles();
const totalCount = getTotalCount();

// Simplified category groups (mapped by blog_id for stability)
